# ==============================================
# CONFIGURAÇÕES GERAIS DA APLICAÇÃO
# ==============================================
APP_ENV=development
APP_NAME=API CAEPI
APP_VERSION=1.0.0
APP_DESCRIPTION=API CAEPI - Sistema de Consulta de Certificados
DEBUG=false
RELOAD=true

# ==============================================
# CONFIGURAÇÕES DO SERVIDOR
# ==============================================
API_PORT=8400
LOG_LEVEL=info

# ==============================================
# CONFIGURAÇÕES DE CACHE
# ==============================================
CACHE_TIMEOUT=3600
CACHE_DIR=cache
PARQUET_FILE_NAME=ca_certificates.parquet
ENABLE_PARQUET_CACHE=true
PARQUET_COMPRESSION=snappy

# ==============================================
# CONFIGURAÇÕES FTP/DADOS CAEPI
# ==============================================
FTP_HOST=ftp.mtps.gov.br
FTP_ENDPOINT=portal/fiscalizacao/seguranca-e-saude-no-trabalho/caepi/
FTP_FILE_NAME=tgg_export_caepi.zip
CA_FILE_NAME=tgg_export_caepi.txt

# ==============================================
# CONFIGURAÇÕES DE CORS
# ==============================================
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# ==============================================
# CONFIGURAÇÕES DE SEGURANÇA
# ==============================================
# SECRET_KEY=sua_chave_secreta_muito_forte_aqui
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================
# CONFIGURAÇÕES DE MONITORAMENTO (OPCIONAL)
